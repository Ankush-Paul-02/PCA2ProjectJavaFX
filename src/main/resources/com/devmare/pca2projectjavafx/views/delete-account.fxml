<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.devmare.pca2projectjavafx.controllers.HandleDeleteAccountController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER"
      spacing="10">

    <Label text="Delete Account Page" style="-fx-font-size: 36px; -fx-font-weight: bold;">
        <padding>
            <javafx.geometry.Insets bottom="20"/>
        </padding>
    </Label>

    <Label fx:id="userDetailsLabel" style="-fx-font-size: 18px; padding: 10 0 0 0;"/>

    <TextField fx:id="accountNumberField" promptText="Account Number"
               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-pref-height: 40px; -fx-pref-width: 200px; -fx-padding: 0 10 0 10;">
        <VBox.margin>
            <javafx.geometry.Insets left="10" right="10"/>
        </VBox.margin>
    </TextField>

    <TextField fx:id="securityPinField" promptText="Security Pin"
               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-pref-height: 40px; -fx-pref-width: 200px; -fx-padding: 0 10 0 10;">
        <VBox.margin>
            <javafx.geometry.Insets left="10" right="10"/>
        </VBox.margin>
    </TextField>

    <Button text="Delete" onAction="#deleteAccount"
            style="-fx-font-size: 18px; -fx-padding: 10 20; -fx-min-width: 200px;"/>
    <Button text="Back" onAction="#goBack"
            style="-fx-font-size: 18px; -fx-padding: 10 20; -fx-min-width: 200px;"/>
</VBox>
